/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "type": "module",
  "compileOnSave": false,
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "CommonJS",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "primeng-locale": [
        "src/app/lib/primeng.locale.ts"
      ],
      "@store/shared/*": ["src/app/ui/shared/store/*"],
      "@store/article/*": ["src/app/ui/article/store/*"],
      "@store/deptname/*": ["src/app/ui/deptname/store/*"],
      "@store/nomenclature/*": ["src/app/ui/nomenclature/store/*"],
      "@store/order/*": ["src/app/ui/order/store/*"],
      "@store/user/*": ["src/app/ui/user/store/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "enableIvy": false
  }
}
